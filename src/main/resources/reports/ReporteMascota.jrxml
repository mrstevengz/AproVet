<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="ReporteMascota" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <field name="nombreMascota" class="java.lang.String"/>
    <field name="fechaNacimiento" class="java.time.LocalDate"/>
    <field name="generoMascota" class="java.lang.Enum"/>
    <field name="raza" class="ni.edu.uam.SistemaAprovet.modelo.core.Raza"/>

    <title>
        <band height="60">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="50" backcolor="#F0F0F0"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="0" y="10" width="350" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="22" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE MASCOTAS]]></text>
            </staticText>

            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="350" y="15" width="195" height="20" forecolor="#555555"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="55" width="555" height="1"/>
            </line>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="30" backcolor="#E6E6E6"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="10" y="0" width="160" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[NOMBRE]]></text>
            </staticText>

            <staticText>
                <reportElement x="170" y="0" width="160" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[RAZA]]></text>
            </staticText>

            <staticText>
                <reportElement x="330" y="0" width="100" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[GÉNERO]]></text>
            </staticText>

            <staticText>
                <reportElement x="430" y="0" width="115" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[NACIMIENTO]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <line>
                <reportElement x="0" y="24" width="555" height="1" forecolor="#CCCCCC"/>
            </line>

            <textField isStretchWithOverflow="true">
                <reportElement x="10" y="2" width="160" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombreMascota} == null ? "-" : $F{nombreMascota}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="170" y="2" width="160" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{raza} == null ? "Desconocida" : $F{raza}.getNombre()]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="330" y="2" width="100" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{generoMascota} == null ? "-" : $F{generoMascota}.toString()]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="430" y="2" width="115" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fechaNacimiento} == null ? "-" : new java.text.SimpleDateFormat("dd/MM/yyyy").format(java.sql.Date.valueOf($F{fechaNacimiento}))]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="435" y="0" width="80" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Pág. "+$V{PAGE_NUMBER}+" de"]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="515" y="0" width="40" height="20"/>
                <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>