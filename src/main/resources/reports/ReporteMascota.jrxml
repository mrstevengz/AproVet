<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="ReporteMascota"
              pageWidth="595" pageHeight="842"
              columnWidth="555"
              leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <!-- ===================== -->
    <!--       ESTILOS         -->
    <!-- ===================== -->
    <style name="BaseFont" fontName="SansSerif" fontSize="10"/>

    <style name="TitleStyle"
           fontSize="18" isBold="true"/>

    <style name="SubTitleStyle"
           fontSize="10" isItalic="true"/>

    <style name="TableHeader"
           mode="Opaque"
           backcolor="#2E86C1" forecolor="#FFFFFF"
           isBold="true"/>

    <style name="TableDetail"/>

    <!-- ===================== -->
    <!--     PARÁMETROS        -->
    <!-- ===================== -->
    <parameter name="fecha_emision" class="java.util.Date"/>

    <!-- ===================== -->
    <!--        CAMPOS         -->
    <!-- ===================== -->
    <field name="oid_mascota" class="java.lang.String"/>
    <field name="nombre_mascota" class="java.lang.String"/>
    <field name="fecha_nacimiento_mascota" class="java.time.LocalDate"/>
    <field name="genero_mascota" class="java.lang.Enum"/>

    <!-- ===================== -->
    <!--        TÍTULO         -->
    <!-- ===================== -->
    <title>
        <band height="60">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="35"
                               mode="Opaque" backcolor="#2E86C1"/>
            </rectangle>

            <staticText>
                <reportElement x="0" y="5" width="555" height="25" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[REPORTE DE MASCOTAS]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="38" width="555" height="18" style="SubTitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Listado general de mascotas registradas en el sistema]]></text>
            </staticText>
        </band>
    </title>

    <!-- ===================== -->
    <!--  ENCABEZADO PÁGINA    -->
    <!-- ===================== -->
    <pageHeader>
        <band height="25">
            <textField>
                <reportElement x="255" y="5" width="300" height="15"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[
"Emitido el " +
new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm:ss")
    .format($P{fecha_emision})
                ]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <!-- ===================== -->
    <!--  ENCABEZADO COLUMNA   -->
    <!-- ===================== -->
    <columnHeader>
        <band height="22">

            <staticText>
                <reportElement x="0" y="0" width="40" height="22" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="50" y="0" width="200" height="22" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[NOMBRE]]></text>
            </staticText>

            <staticText>
                <reportElement x="260" y="0" width="150" height="22" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[FECHA NACIMIENTO]]></text>
            </staticText>

            <staticText>
                <reportElement x="420" y="0" width="135" height="22" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[GÉNERO]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ===================== -->
    <!--        DETALLE        -->
    <!-- ===================== -->
    <detail>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="40" height="20" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{oid_mascota}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="50" y="0" width="200" height="20" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{nombre_mascota}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="260" y="0" width="150" height="20" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{fecha_nacimiento_mascota}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="420" y="0" width="135" height="20" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{genero_mascota}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>
