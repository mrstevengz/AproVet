<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="ReporteTrabajador" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <field name="nombre" class="java.lang.String"/>
    <field name="cargo" class="java.lang.String"/>
    <field name="cedula" class="java.lang.String"/>
    <field name="telefono" class="java.lang.String"/>
    <field name="salario" class="java.math.BigDecimal"/>

    <title>
        <band height="60">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="50" backcolor="#F0F0F0"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="10" y="10" width="340" height="30"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="22" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE TRABAJADORES]]></text>
            </staticText>

            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="350" y="15" width="195" height="20" forecolor="#555555"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA["Generado: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="55" width="555" height="1"/>
            </line>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="30" backcolor="#E6E6E6"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="5" y="0" width="180" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[NOMBRE COMPLETO]]></text>
            </staticText>

            <staticText>
                <reportElement x="185" y="0" width="120" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[CARGO]]></text>
            </staticText>

            <staticText>
                <reportElement x="305" y="0" width="95" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[CÉDULA]]></text>
            </staticText>

            <staticText>
                <reportElement x="400" y="0" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TELÉFONO]]></text>
            </staticText>

            <staticText>
                <reportElement x="480" y="0" width="75" height="30"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[SALARIO]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <line>
                <reportElement x="0" y="24" width="555" height="1" forecolor="#CCCCCC"/>
            </line>

            <textField isStretchWithOverflow="true">
                <reportElement x="5" y="2" width="180" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{nombre} == null ? "-" : $F{nombre}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="185" y="2" width="120" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{cargo} == null ? "-" : $F{cargo}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="305" y="2" width="95" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{cedula} == null ? "-" : $F{cedula}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="400" y="2" width="80" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{telefono} == null ? "-" : $F{telefono}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="480" y="2" width="75" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{salario} == null ? "-" : new java.text.DecimalFormat("C$ #,##0.00").format($F{salario})]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="435" y="0" width="80" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression class="java.lang.String"><![CDATA["Pág. "+$V{PAGE_NUMBER}+" de"]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="515" y="0" width="40" height="20"/>
                <textFieldExpression class="java.lang.String"><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>