<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="ReporteCliente" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <field name="nombre_cliente" class="java.lang.String"/>
    <field name="apellido_cliente" class="java.lang.String"/>
    <field name="cedula_cliente" class="java.lang.String"/>
    <field name="telefono_cliente" class="java.lang.String"/>
    <field name="direccion_cliente" class="java.lang.String"/>

    <title>
        <band height="60">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="50" backcolor="#F0F0F0"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="0" y="10" width="350" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="22" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE CLIENTES]]></text>
            </staticText>

            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="350" y="15" width="195" height="20" forecolor="#555555"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="55" width="555" height="1"/>
            </line>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="30" backcolor="#E6E6E6"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="10" y="0" width="80" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[NOMBRE]]></text>
            </staticText>

            <staticText>
                <reportElement x="90" y="0" width="80" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[APELLIDO]]></text>
            </staticText>

            <staticText>
                <reportElement x="170" y="0" width="100" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[CÉDULA]]></text>
            </staticText>

            <staticText>
                <reportElement x="270" y="0" width="80" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TELÉFONO]]></text>
            </staticText>

            <staticText>
                <reportElement x="350" y="0" width="200" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[DIRECCIÓN]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <line>
                <reportElement x="0" y="24" width="555" height="1" forecolor="#CCCCCC"/>
            </line>

            <textField isStretchWithOverflow="true">
                <reportElement x="10" y="2" width="80" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombre_cliente} == null ? "-" : $F{nombre_cliente}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="90" y="2" width="80" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{apellido_cliente} == null ? "-" : $F{apellido_cliente}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="170" y="2" width="100" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{cedula_cliente} == null ? "-" : $F{cedula_cliente}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="270" y="2" width="80" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{telefono_cliente} == null ? "-" : $F{telefono_cliente}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="350" y="2" width="200" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{direccion_cliente} == null ? "-" : $F{direccion_cliente}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="435" y="0" width="80" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Pág. "+$V{PAGE_NUMBER}+" de"]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="515" y="0" width="40" height="20"/>
                <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>