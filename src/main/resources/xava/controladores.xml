<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controladores SYSTEM "dtds/controladores.dtd">

<!-- 
Documentación sobre controladores: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_es.html

Controladores por defecto, incluidos en OpenXava (puedes extender de ellos):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Ejemplos de controladores (de la aplicación de pruebas):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controladores>
    
    <!-- Variable de entorno: 
    <var-entorno nombre="SistemaAprovet_ANYO_DEFECTO" valor="2015"/>
    -->
    
    <!-- Objeto de sesión:
    <Objeto nombre="SistemaAprovet_anyoActivo" clase="java.lang.Integer" valor="2015" 
            ambito="global"/>
    -->
    
    <!-- Controlador: Mascota  -->
    <controlador nombre="TypicalConReporte">
        <hereda-de controlador="Typical"/>

        <accion nombre="imprimirMascotas" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.report.PrintMascotasReportAction"/>

        <accion nombre="imprimirClientes" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.report.PrintClienteReportAction"/>

        <accion nombre="imprimirTrabajadores" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.report.PrintTrabajadorReportAction"/>

        <accion nombre="imprimirProveedores" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.report.PrintProveedorReportAction"/>

        <accion nombre="imprimirServicios" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.report.PrintServicioReportAction"/>

    </controlador>


</controladores>
