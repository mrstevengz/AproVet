<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controladores SYSTEM "dtds/controladores.dtd">

<!-- 
Documentación sobre controladores: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_es.html

Controladores por defecto, incluidos en OpenXava (puedes extender de ellos):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Ejemplos de controladores (de la aplicación de pruebas):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controladores>
    
    <!-- Variable de entorno: 
    <var-entorno nombre="SistemaAprovet_ANYO_DEFECTO" valor="2015"/>
    -->
    
    <!-- Objeto de sesión:
    <Objeto nombre="SistemaAprovet_anyoActivo" clase="java.lang.Integer" valor="2015" 
            ambito="global"/>
    -->
    
    <!-- Controlador: Cliente  -->
    <controlador nombre="Cliente">
        <hereda-de controlador="Typical"/>
        <accion nombre="printCustomReport" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.PrintMyCustomReportAction"/>
    </controlador>

    <controlador nombre="DetalleCompra">
        <!-- Hereda todas las acciones típicas (New, Save, Delete, etc.) -->
        <hereda-de controlador="Typical"/>

        <!-- Sobrescribimos la acción save para usar nuestra clase -->
    </controlador>

    <controlador nombre="FacturaDetalle">
        <hereda-de controlador="Typical"/>
    </controlador>

    <controlador nombre="InventarioSoloEdicion">
        <hereda-de controlador="Typical"/>
    </controlador>

    <controlador nombre="Cliente">
        <hereda-de controlador="Typical"/>
        <accion nombre="printCustomReport" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.PrintMyCustomReportAction"/>
        <accion nombre="printMascota" icono="printer" modo="list"
                clase="ni.edu.uam.SistemaAprovet.actions.PrintMascotasReportAction"/>
    </controlador>
</controladores>
